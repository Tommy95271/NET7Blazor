@page "/"

<p>Plain input:</p>
<input @bind="searchText" @bind:after="PerformSearch" />

<p>InputText control:</p>
<InputText @bind-Value="searchText" @bind-Value:after="PerformSearch" />

<p>Plain input old way:</p>
<input value="@searchText" @onchange="PerformSearch2" />

<p>bind:get & bind:set</p>
<input @bind:get="searchText2" @bind:set="SetAsync" />

@code {
    string searchText;
    string searchText2;

    async Task PerformSearch()
    {
        Console.WriteLine(searchText);
    }

    async Task PerformSearch2(ChangeEventArgs args)
    {
        Console.WriteLine(args.Value);
    }

    async Task SetAsync(string value)
    {
        searchText2 = value;
        Console.WriteLine(value);
    }
}